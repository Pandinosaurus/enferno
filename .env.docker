# Docker Environment Variables
COMPOSE_PROJECT_NAME=enferno

# Flask Configuration
FLASK_APP=run.py
FLASK_DEBUG=0

# Database Configuration
SQLALCHEMY_DATABASE_URI=postgresql://enferno:verystrongpass@postgres/enferno

# Redis Configuration
REDIS_PASSWORD=verystrongpass
REDIS_HOST=redis
REDIS_PORT=6379

# Redis URLs
SESSION_REDIS=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/1
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/2
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/3

# Security Keys (will be auto-generated by generate_env command)
SECRET_KEY=
SECURITY_PASSWORD_SALT=
SECURITY_TOTP_SECRETS=

# Mail Configuration
MAIL_SERVER=smtp.sendgrid.net
MAIL_USERNAME=
MAIL_PASSWORD=
SECURITY_EMAIL_SENDER=

# OpenAI Configuration
OPENAI_API_KEY=
